root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yaml,yml}]
indent_size = 2

[Makefile]
indent_style = tab

[.git/COMMIT_EDITMSG]
max_line_length = 72

[*]
ij_continuation_indent_size = 8
ij_formatter_off_tag = @formatter:off
ij_formatter_on_tag = @formatter:on
ij_formatter_tags_enabled = false
ij_smart_tabs = false
ij_wrap_on_typing = false

[*.java]
ij_java_class_count_to_use_import_on_demand = 1000
ij_java_names_count_to_use_import_on_demand = 1000

[{*.gant,*.gradle,*.groovy,*.gson,*.gy,*.tmpl}]
ij_groovy_class_count_to_use_import_on_demand = 1000
ij_groovy_names_count_to_use_import_on_demand = 1000

[{*.yaml,*.yml}]
ij_yaml_keep_indents_on_empty_lines = false
ij_yaml_keep_line_breaks = true
